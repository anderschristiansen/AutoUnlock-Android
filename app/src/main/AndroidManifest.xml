<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.anders.autounlock">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@android:style/Theme.NoTitleBar">
        <activity
                android:name="net.anders.autounlock.MainActivity"
                android:configChanges="orientation"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="net.anders.autounlock.NotificationDecisionActivity"
                android:excludeFromRecents="true"
                android:label="@string/title_activity_decision"
                android:launchMode="singleTask"
                android:taskAffinity=""
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
                android:name="net.anders.autounlock.CoreService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.AccelerometerService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.LocationService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.WifiService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.BluetoothService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.GeofenceService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.DataProcessorService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.ScannerService"
                android:enabled="true"/>
        <service
                android:name="net.anders.autounlock.NotificationUtility$NotificationActionService"
                android:enabled="true">
        </service>
    </application>
</manifest>